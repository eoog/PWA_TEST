{
  "manifest_version": 3,
  "name": "URL Tracker",
  "version": "2.0",
  "description": "열린 탭과 그 내용을 추적합니다",
  "permissions": [
    "activeTab",
    "sidePanel",
    "scripting",
    "tabs",
    "downloads",
    "windows"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "popup.html"
  }
}
