{
  "manifest_version": 3,
  "name": "URL Content Tracker",
  "version": "1.0",
  "description": "열린 탭과 그 내용을 추적합니다",
  "permissions": [
    "activeTab",
    "sidePanel",
    "scripting",
    "tabs",
    "downloads",
    "windows",
    "tabCapture"

  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "newBackground.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["newContent.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "popup.html"
  }
}
