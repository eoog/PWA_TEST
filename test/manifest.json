{
  "manifest_version": 3,
  "name": "Site Blocker",
  "version": "1.0",
  "description": "Blocks user-specified sites.",
  "permissions": [
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Site Blocker"
  },
  "background": {
    "service_worker": "background.js"
  }
}